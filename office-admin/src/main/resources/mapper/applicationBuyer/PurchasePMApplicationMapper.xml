<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.office.applicationBuyer.mapper.PurchasePMApplicationMapper">
    
    <resultMap type="PurchasePMApplication" id="PurchasePMApplicationResult">
        <result property="applicationId"    column="application_id"    />
        <result property="applicationNo"    column="application_no"    />
        <result property="applicantId"    column="applicant_id"    />
        <result property="applyReason"    column="apply_reason"    />
        <result property="applicationStatus"    column="application_status"    />
        <result property="urgentLevel"    column="urgent_level"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectPurchasePMApplicationVo">
        select application_id, application_no, applicant_id, apply_reason, application_status, urgent_level, create_time, update_time from purchase_application
    </sql>

    <select id="selectPurchasePMApplicationList" parameterType="PurchasePMApplication" resultMap="PurchasePMApplicationResult">
        <include refid="selectPurchasePMApplicationVo"/>
        <where>  
            <if test="applicationNo != null  and applicationNo != ''"> and application_no = #{applicationNo}</if>
            <if test="applicantId != null "> and applicant_id = #{applicantId}</if>
            <if test="applicationStatus != null "> and application_status = #{applicationStatus}</if>
            <if test="urgentLevel != null "> and urgent_level = #{urgentLevel}</if>
        </where>
    </select>
    
    <select id="selectPurchasePMApplicationByApplicationId" parameterType="Long" resultMap="PurchasePMApplicationResult">
        <include refid="selectPurchasePMApplicationVo"/>
        where application_id = #{applicationId}
    </select>
    <select id="selectPurchasePMApplicationListOne"
            resultMap="PurchasePMApplicationResult">
        select * from purchase_application
    </select>


    <insert id="insertPurchasePMApplication" parameterType="PurchasePMApplication" useGeneratedKeys="true" keyProperty="applicationId">
        insert into purchase_application
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="applicationNo != null and applicationNo != ''">application_no,</if>
            <if test="applicantId != null">applicant_id,</if>
            <if test="applyReason != null and applyReason != ''">apply_reason,</if>
            <if test="applicationStatus != null">application_status,</if>
            <if test="urgentLevel != null">urgent_level,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="applicationNo != null and applicationNo != ''">#{applicationNo},</if>
            <if test="applicantId != null">#{applicantId},</if>
            <if test="applyReason != null and applyReason != ''">#{applyReason},</if>
            <if test="applicationStatus != null">#{applicationStatus},</if>
            <if test="urgentLevel != null">#{urgentLevel},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updatePurchasePMApplication" parameterType="PurchasePMApplication">
        update purchase_application
        <trim prefix="SET" suffixOverrides=",">
            <if test="applicationNo != null and applicationNo != ''">application_no = #{applicationNo},</if>
            <if test="applicantId != null">applicant_id = #{applicantId},</if>
            <if test="applyReason != null and applyReason != ''">apply_reason = #{applyReason},</if>
            <if test="applicationStatus != null">application_status = #{applicationStatus},</if>
            <if test="urgentLevel != null">urgent_level = #{urgentLevel},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where application_id = #{applicationId}
    </update>

    <delete id="deletePurchasePMApplicationByApplicationId" parameterType="Long">
        delete from purchase_application where application_id = #{applicationId}
    </delete>

    <delete id="deletePurchasePMApplicationByApplicationIds" parameterType="String">
        delete from purchase_application where application_id in 
        <foreach item="applicationId" collection="array" open="(" separator="," close=")">
            #{applicationId}
        </foreach>
    </delete>
</mapper>